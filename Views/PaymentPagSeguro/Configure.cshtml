@{
    Layout = "";
}
@model ConfigurationModel
@using NopBrasil.Plugin.Payments.PagSeguro.Models;
@using Nop.Web.Framework;

<div style="color:Red;">
    @Html.ValidationSummary(false)
</div>

@using (@Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div>
                    <a href="http://www.nopcommercebrasil.com"><img src="/Plugins/Payments.PagSeguro/Content/Images/nopCommerceBrasil.png"></a>
                    <br />
                    <p>
                        Este plugin foi desenvolvido por <a href="http://www.nopcommercebrasil.com">NopCommerce Brasil - http://www.nopcommercebrasil.com</a><br />
                        Em caso de dúvidas ou problemas por favor entre em contato conosco através do email <a href="mailto:nopcommercebrasil@nopcommercebrasil.com" target="_top">nopcommercebrasil@nopcommercebrasil.com</a><br />
                        Este plugin é open-source e seu código-fonte está disponível no <a href="https://github.com/nopCommerceBrasil">GitHub do NopCommerce Brasil</a> no repositório <a href="https://github.com/nopCommerceBrasil/NopBrasil.Plugin.Payments.PagSeguro">NopBrasil.Plugin.Payments.PagSeguro</a>
                    </p>
                    <br />

                </div>
                <div>
                    <p>PagSeguro é uma ferramenta do UOL que disponibiliza mais de 15 formas de pagamento, para mais informações e para criar sua conta acesse: https://pagseguro.uol.com.br </p>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.PagSeguroEmail)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PagSeguroEmail)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        @Html.NopLabelFor(model => model.PagSeguroToken)
                    </div>
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.PagSeguroToken)
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>

            </div>
        </div>
    </div>
}


